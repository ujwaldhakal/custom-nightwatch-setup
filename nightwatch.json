{
  "src_folders" : ["specs"],
  "globals_path": "global.js",
  "output_folder" : "reports",
  "webdriver": {
    "server_path": "node_modules/.bin/chromedriver",
    "cli_args": [
      "--verbose"
    ],
    "port": 9515
  },

  "test_settings" : {
    "default" : {
      "videos": {
        "enabled": true,
        "delete_on_success": false,
        "path": "videos"
      },
      "launch_url" : "http://pagevamp.com",
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions" : {
          "args" : ["headless"]
        }
      }
    }
  }
}
